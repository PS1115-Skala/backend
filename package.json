{
  "name": "reservac-api",
  "version": "1.0.0",
  "description": "Backend of the LDAC laboratory reservation system (a.k.a MAC).",
  "author": "Skala Inc.",
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "dev": "NODE_ENV=development nodemon src/app.js",
    "dev:tunnel": "ngrok http 5000",
