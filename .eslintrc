{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true,
		"jest": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"prettier",
		"plugin:security/recommended"
	],
	"plugins": [
		"security",
		"prefer-arrow"
	],
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"no-console": "error",
		"no-inline-comments": "error",
		"quotes": [
			"error",
			"single"
		],
		"indent": [
			"error",
			"tab"
		],
		"no-multi-spaces": "error",
		"no-multiple-empty-lines": [
			"error",
			{
				"max": 1
			}
		],
		"semi": [
			"error",
			"always"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"comma-spacing": [
			"error",
			{
				"before": false,
				"after": true
			}
		],
		"space-infix-ops": "error"
	}
}
